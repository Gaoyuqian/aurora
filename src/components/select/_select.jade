div.au-select(
  @click="clickHandler",
  :class="classObj"
)
  .au-select-inner
    .au-select-text(v-if="text")
      |{{ text }}

    .au-select-list(v-if="mutiple && selected.length > 0")
      div.au-select-item(
        v-for="s in selected"
      )
        |{{ s.label }}
        au-icon(icon="close", @click.native="removeValueHandler($event, s.value)")

    au-icon(icon="caret-down")

  popup(
    ref="popup"
  )
    .au-options(ref="options")
      au-option(
        v-if="options != null",
        v-for="option in options",
        :label="option.label",
        :value="option.value",
        :showCheck="mutiple"
      )
      slot(v-if="options == null")
