transition(name="message-fade")
  .au-message(
    :class="classObject",
    v-if="isShow"
  )
    .au-message-inner
      .au-message-icon(
        :class="{ 'au-message-icon-success': this.type === 'success', 'au-message-icon-info': this.type === 'info' || this.type === 'loading', 'au-message-icon-warning': this.type === 'warning', 'au-message-icon-danger': this.type === 'danger' }"
      )
        au-icon(icon="check-circle-o", v-if="type === 'success'")
        au-icon(icon="info-circle", v-if="type === 'info'")
        au-icon(icon="exclamation-circle", v-if="type === 'warning'")
        au-icon(icon="times-circle-o", v-if="type === 'danger'")
        au-icon(icon="circle-o-notch", v-if="type === 'loading'", autorotate)
      .au-message-content
        |{{ message }}

      .au-message-close(@click="disappear", v-if="type != 'loading'")
        au-icon(icon="times")