div.au-tabs
  .au-tabs-heading
    .au-tab-item(v-for="tab in tabs", :class="{ active: currentValue == tab.value }", @click="setValue(tab.value)")
      |{{ tab.tab }}
      .au-tab-badge(v-if="tab.badge")|{{tab.badge}}
  .au-tabs-heading-active-line(:style="activeLineStyle")
  .au-tabs-content
    slot