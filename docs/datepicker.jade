extends ./_layout

block title
  |DatePicker

block content
  .docs-heading
    h1|AuDatePicker
    .docs-desc

  .docs-section
    h2|日期选择器
    .docs-desc

    .docs-panel
      .docs-panel-row
        au-date-picker(v-model="date")
      .docs-panel-row
        au-date-picker(v-model="year", type="year")

      .docs-panel-row
        au-date-picker(v-model="month", type="month")

      .docs-panel-row
        au-date-picker(v-model="dateRange", type="daterange")

  .docs-section
    h2|时间选择器
    .docs-desc

    .docs-panel
      .docs-panel-row
        au-date-picker(v-model="time", type="time")

block script
  script.
    new Vue({
      el: '#app',
      mixins: [ attrMixins ],
      data () {
        return {
          date: '2017-02-27',
          year: '2017-02-27',
          month: '2017-02',
          dateRange: ['2017-02-07', '2017-06-11'],
          time: '11:11:11',
          attrs: [
            {
              name: '',
              desc: '',
              type: '',
              default: ''
            }
          ]
        }
      }
    })
