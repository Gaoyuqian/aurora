      au-table-column(
        type="checkbox",
        v-model="checkedRow"
      )
      au-table-column(
        label='姓名',
        attr-name="name",
        width="200"
      )

      au-table-column(
        label='年龄',
        attr-name="age",
        width="800"
      )

      au-table-column(
        label='年龄',
