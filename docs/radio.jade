extends ./_layout

block title
  Radio

block content
  .docs-heading
    h1|AuRadio
    .docs-desc

  .docs-section
    h2|基础选择器
    .docs-desc

    template.html(scoped="scoped")
      .docs-panel-row
        div
          au-radio(label="男", native-value="male", v-model="form.gender")
          au-radio(label="女", native-value="female", v-model="form.gender")

        div
          au-radio(native-value="male", v-model="form.gender")|男
          au-radio(native-value="female", v-model="form.gender")|女
    .docs-panel
      .docs-panel-content
      .docs-code
        docs-code.html

  .docs-section
    h2|禁用状态
    .docs-desc

    template.html(scoped="scoped")
      .docs-panel-row
        div
          au-radio(label="男", native-value="male", v-model="form.gender", disabled)
          au-radio(label="女", native-value="female", v-model="form.gender", disabled)
    .docs-panel
      .docs-panel-content
      .docs-code
        docs-code.html

  .docs-section
    h2|Radiox组
    .docs-desc

    template.html(scoped="scoped")
      .docs-panel-row
        div
          au-radio-group(:options="options" v-model="form.class")
        div
          au-radio-group(v-model="form.class")
            au-radio(:native-value="option.value", v-for="option in options")
              |{{ option.label }}

    .docs-panel
      .docs-panel-content
      .docs-code
        docs-code.html

  .docs-section
    h2|属性
    au-table-column(v-for="column in columns", :label="column.label", :attr-name="column.attrName")

