doctype html
html
    head
        title Aurora Design
        meta(charset="utf-8")
        link(href="index.css" rel="stylesheet")
        //- link(href="src/sass/main.css" rel="stylesheet")
        link(href="lib/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet")
        script(src="lib/vue.dev.js")
        script(src="src/aurora.js")
    body
        div#app(v-cloak)
            div(style="padding: 10px; width: 600px;")
                au-transfer(v-model="checkeds", :data="transferData", :left-default-checkeds="leftCheckeds", :right-default-checkeds="rightCheckeds",
                data-key="idx",
                :render-func="renderFunc",
                :button-texts="buttonTexts",
                @change="onchange"
                ref="demo")
                div| -----------
                {{JSON.stringify(checkeds)}}
                //- {{JSON.stringify(transferData)}}
        
        script.
            var datas = function (){
                var datas = []
                for (var i= 0; i<20; i++){
                    datas.push({
                        label: `备选项 ${i}`,
                        idx: i,
                        //- disabled: i % 4 === 0
                    })
                }
                return datas
            }()

            vm = new Vue({
                el: "#app",
                data: {
                    transferData: datas,
                    checkeds: [0, 5],
                    leftCheckeds: [],
                    rightCheckeds: [],
                    buttonTexts: ['源','目标']
                },
                methods: {
                    renderFunc: function (data){
                        return `${data.idx}-${data.label}`
                    },
                    onchange: function (checkeds){
                        console.log(checkeds)
                    }
                }
            })
